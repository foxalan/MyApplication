<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:background="@drawable/assistant"
        android:id="@+id/iv_robot_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="30dp"
        android:textColor="@color/white"
        android:id="@+id/et_robot_content"
        android:text="你好,我是智能机器人小莫,非常高兴为你服务"
        android:layout_toRightOf="@id/iv_robot_icon"
        android:background="@drawable/chat_bg_cloud"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_robot_date"
        android:layout_centerHorizontal="true"
        android:text="2017-07-20"
        android:layout_below="@id/iv_robot_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>