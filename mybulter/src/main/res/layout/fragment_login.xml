<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp"
        android:id="@+id/profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/imooc_logo"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_border_color_white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="3"
            android:gravity="start|center_vertical"
            android:text="@string/str_login_username"
            android:textColor="@color/login_text_color"
            android:textSize="@dimen/login_text_size" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@null"
            android:textColor="@color/login_text_color"
            android:textSize="@dimen/login_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_border_color_white"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/login_text_color"
            android:textSize="@dimen/login_text_size"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_weight="3"
            android:gravity="start|center_vertical"
            android:text="@string/str_login_password"
            />

        <EditText
            android:textColor="@color/login_text_color"
            android:textSize="@dimen/login_text_size"
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@null"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="10dp">

        <CheckBox
            android:textColor="@color/login_text_color"
            android:textSize="@dimen/login_text_size"
            android:id="@+id/cb_rem_password"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/str_login_password_get"
             />

    </LinearLayout>


    <Button
        android:textColor="@color/login_text_color"
        android:textSize="@dimen/login_text_size"
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_border_color_white"
        android:text="@string/str_login"
        />

    <Button
        android:textColor="@color/login_text_color"
        android:textSize="@dimen/login_text_size"
        android:id="@+id/bt_register"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/bg_border_color_white"
        android:text="@string/str_register"
        />

    <TextView
        android:textColor="@color/login_text_color"
        android:textSize="@dimen/login_text_size"
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:gravity="end"
        android:text="@string/str_login_password_forget"
        />

    <!--<com.example.mybulter.view.WaitView-->
        <!--android:background="@color/black"-->
        <!--android:layout_gravity="center"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->


</LinearLayout>