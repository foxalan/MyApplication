<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/bg_border_color_white"
        >

        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="手机号:"
            android:textSize="@dimen/dimen_size_small" />

        <EditText
            android:layout_gravity="center_vertical"
            android:id="@+id/et_query_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="@null"
            android:text="WHUNA"
            android:textSize="@dimen/dimen_size_small" />

        <Button
            android:layout_gravity="center"
            android:text="查询"
            android:id="@+id/bt_phone_query"
            android:textSize="@dimen/dimen_size_small"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_phone_company"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:src="@drawable/china_mobile" />
        <TextView
            android:text="WUHAN"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_size_small"
            android:id="@+id/tv_phone_province"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <TextView

            android:gravity="center"
            android:text="WUHAN"
            android:textColor="@android:color/black"
            android:textSize="@dimen/dimen_size_small"
            android:id="@+id/tv_phone_city"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.inputmethodservice.KeyboardView
            android:id="@+id/kb_query_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:keyBackground="@drawable/btn_keyboard_key"
            android:keyTextColor="@color/black"
            android:visibility="gone"
            >

        </android.inputmethodservice.KeyboardView>


    </RelativeLayout>



</LinearLayout>