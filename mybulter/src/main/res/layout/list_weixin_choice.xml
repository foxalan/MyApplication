<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_list_weixin_icon"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView

            android:id="@+id/tv_list_weixin_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:gravity="left|center_vertical"
            android:singleLine="true"
            android:text="LOL DATA "
            android:textColor="@color/black"
            android:textSize="@dimen/dimen_list_title" />

        <TextView
            android:id="@+id/tv_list_weixin_where"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="新华出版社"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/dimen_size_small" />
    </LinearLayout>
</LinearLayout>