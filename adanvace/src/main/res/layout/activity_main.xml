<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.adanvace.MainActivity">

        <Button
            android:id="@+id/bt_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="竖向的Viewpager " />

        <Button
            android:id="@+id/bt_view_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义View显示图片" />

        <Button
            android:id="@+id/bt_view_radius"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义View显示等待效果" />

        <Button
            android:id="@+id/bt_view_sound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义View音量显示效果" />

        <Button
            android:id="@+id/bt_volley"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="Volley网络请求" />

        <Button
            android:id="@+id/bt_database"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="获取联系人列表,并进行查询操作" />

        <Button
            android:id="@+id/bt_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="各种样式的TAB主界面" />

        <Button
            android:id="@+id/bt_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="ScrollView的反弹效果" />

        <Button
            android:id="@+id/bt_refresh_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="ListView的下拉刷新" />

        <Button
            android:id="@+id/bt_view_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义ViewGroup" />

        <Button
            android:id="@+id/bt_view_group_flow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义ViewGroup实现标签" />

        <Button
            android:id="@+id/bt_custom_adapter_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="打造万能的适配器之ListView" />

        <Button
            android:id="@+id/bt_custom_adapter_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="打造万能的适配器之RecyclerView" />
        <Button
            android:id="@+id/bt_lottery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义抽奖转盘" />

        <Button
            android:id="@+id/bt_animation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="ANIMATION" />

        <Button
            android:id="@+id/bt_animator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="ANIMATOR" />

        <Button
            android:id="@+id/bt_horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="自定义模特ScrollView" />

        <Button
            android:id="@+id/bt_jigsaw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:text="拼图小游戏" />

    </LinearLayout>


</ScrollView>
