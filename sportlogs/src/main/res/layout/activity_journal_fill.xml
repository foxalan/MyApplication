<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/bg_border_color_white"
        android:padding="@dimen/padding_normal"
        android:layout_margin="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:text="JOURNAL NAME:"
            android:textSize="@dimen/text_size_small"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_journal_name"
            android:focusable="false"
            android:background="@null"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_border_color_white"
        android:padding="@dimen/padding_normal"
        android:layout_margin="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:text="JOURNAL VALUE:"
            android:textSize="@dimen/text_size_small"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <!--android:inputType="numberDecimal"-->


        <EditText
            android:inputType="numberDecimal"
            android:hint="value"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/et_journal_values"
            android:background="@null"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:background="@drawable/bg_border_color_white"
        android:padding="@dimen/padding_normal"
        android:layout_margin="@dimen/margin_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/black"
            android:text="JOURNAL TIME:"
            android:textSize="@dimen/text_size_small"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_journal_time"
            android:focusable="false"
            android:background="@null"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_add_journal"
        android:layout_margin="@dimen/margin_normal"
        android:text="SURE"
        android:background="@drawable/bg_border_color_white"
        android:layout_width="match_parent"
        android:layout_height="30dp" />


    <ListView
        android:id="@+id/lv_history_journal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>