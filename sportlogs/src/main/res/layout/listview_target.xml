<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_margin="@dimen/margin_big"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:padding="@dimen/padding_normal"
                android:text="NAME"
                android:id="@+id/tv_list_target_name"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <TextView

                android:textStyle="bold"
                android:padding="@dimen/padding_normal"
                android:text="NAME"
                android:id="@+id/tv_list_target_name_item"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_margin="@dimen/margin_big"
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:padding="@dimen/padding_normal"
                android:text="start:2017-9-1"
                android:id="@+id/tv_list_target_start_time"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp" />

            <TextView
                android:textStyle="bold"
                android:padding="@dimen/padding_normal"
                android:text="end  :2017-9-1"
                android:id="@+id/tv_list_target_end_time"
                android:textSize="@dimen/text_size_small"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <com.example.sportlogs.view.NumberView
                android:layout_gravity="center_vertical"
                android:id="@+id/view_number_list_values_target"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:text_size="15dp"
                app:round_radius="40dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="@dimen/margin_big"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp">


        <ProgressBar
            android:layout_margin="@dimen/margin_normal"
            android:id="@+id/pb_list_target"
            android:max="100"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="10dp" />

        <TextView
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:text="40%"
            android:id="@+id/tv_list_target_progress"
            android:textSize="@dimen/text_size_small"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>
